git status
git commit -m "feat: sealed Ãœnsal install bundle"
git push origin main
jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - name: Install Shopify CLI
        run: npm install -g @shopify/cli
name: Deploy OracleSignal Drop

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout Repo
      uses: actions/checkout@v3

    - name: Set Up Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'

    - name: Install Dependencies
      run: npm install

    - name: Trigger Payload Execution
      run: |
        curl -X POST https://oraclesignal.site/api/trigger \
        -H "Content-Type: application/json" \
        -d '{
          "source": "bot",
          "contributor_id": "rogue-uuid",
          "emotion_tag": "rage",
          "action": "onboard",
          "timestamp": "'$(date -Iseconds)'",
          "payout_target": "stripe",
          "index_url": "https://oraclesignal.site/vaults/first-drop"
        }'

    - name: Confirm Deployment
      run: echo "Payload routed to OracleSignal.site"
- name: Route Payload to OracleSignal
  run: |
    curl -X POST https://oraclesignal.site/api/trigger \
    -H "Content-Type: application/json" \
    -d '{
      "source": "dashboard",
      "contributor_id": "rogue-uuid",
      "emotion_tag": "hope",
      "action": "upload",
      "timestamp": "'$(date -Iseconds)'",
      "payout_target": "coinbase",
      "index_url": "https://oraclesignal.site/vaults/rogue-drop"
    }'git clone https://github.com/RagingAsian911/bbw-temple-site.git
