  <input type="hidden" name="emotion_tag" value="sovereignty">
  <input type="hidden" name="source" value="storefronts.oraclesignal.site">
  <input type="hidden" name="index_url" value="https://oraclesignal.site/vaults/drop">
  <input type="hidden" name="timestamp" value="">
  <button type="submit">Trigger Drop</button>
</form>

