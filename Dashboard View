<table>
  <thead><tr><th>Signal</th><th>Type</th><th>Emotion</th><th>Contributor</th><th>Payout</th><th>Status</th></tr></thead>
  <tbody id="signal-log"></tbody>
</table>

<script>
fetch("/api/signals")
  .then(res => res.json())
  .then(data => {
    const tbody = document.getElementById("signal-log");
    data.forEach(sig => {
      const row = `<tr>
        <td>${sig.title}</td>
        <td>${sig.type}</td>
        <td>${sig.emotion}</td>
        <td>${sig.contributor}</td>
        <td>$${sig.payout}</td>
        <td>${sig.type === "auction" ? "Sponsored by " + sig.sponsor : "Live"}</td>
      </tr>`;
      tbody.innerHTML += row;
    });
  });
</script>
