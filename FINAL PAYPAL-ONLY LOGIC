const express = require('express');
const app = express();
app.use(express.json());

app.post('/api/drop', async (req, res) => {
  const payload = {
    source: req.body.source || "storefronts.oraclesignal.site",
    contributor_id: req.body.contributor_id || "rogue-uuid",
    emotion_tag: req.body.emotion_tag || "control",
    action: req.body.action || "purchase",
    timestamp: new Date().toISOString(),
    index_url: req.body.index_url || "https://oraclesignal.site/vaults/signal-drop"
  };

  // ðŸ” PAYPAL ROUTING ONLY
  await sendToPayPal("charlesbuchanan89@yahoo.com", "25.00", "USD");

  // ðŸ” LOG TO DASHBOARD
  await logToSupabase(payload);

  // ðŸ”— INDEX TO VAULT
  await publishToVault(payload.index_url, payload);

  res.status(200).send({ status: "Drop executed", payload });
});

function sendToPayPal(email, amount, currency) {
  console.log(`Routing $${amount} ${currency} to PayPal: ${email}`);
}

function logToSupabase(payload) {
  console.log("Logged to dashboard:", payload);
}

function publishToVault(url, payload) {
  console.log("Published to vault:", url);
}

app.listen(3000, () => console.log('Drop router live on port 3000'));
