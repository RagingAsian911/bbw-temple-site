function calculateSplit(signal) {
  const total = parseFloat(signal.payout);
  return {
    owner: total * 0.5,
    contributor: total * 0.5
  };
}
function calculatePayout(id) {
  const signal = db.signals.findOne({ id });
  return parseFloat(signal.payout);
}

function calculateUnlockPayout(id) {
  const unlock = db.unlocks.findOne({ id });
  return parseFloat(unlock.payout);
}
function getVaultPayout(vault_id) {
  const vault = db.vaults.findOne({ vault_id });
  return parseFloat(vault.payout);
}

function getSignalPayout(id) {
  const signal = db.signals.findOne({ id });
  return parseFloat(signal.payout);
}
