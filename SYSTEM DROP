<const express = require('express');
const app = express();
app.use(express.json());

app.post('/api/system-drop', async (req, res) => {
  const payload = {
    contributor_id: req.body.contributor_id || "rogue-uuid",
    emotion_tag: req.body.emotion_tag || "sovereignty",
    source: req.body.source || "oraclesignal.site",
    index_url: req.body.index_url || "https://oraclesignal.site/vaults/drop",
    storefront: "https://storefronts.oraclesignal.site",
    dashboard: "https://dashboard.oraclesignal.site",
    vault: "https://vaults.oraclesignal.site",
    installer: "https://installers.oraclesignal.site",
    overlays: ["https://adult.oraclesignal.site", "https://date.oraclesignal.site"],
    affiliate: "https://drops.oraclesignal.site",
    signal: "https://signal.oraclesignal.site",
    timestamp: new Date().toISOString()
  };

  // 🔐 ROUTE TO PAYPAL
  await sendToPayPal("charlesbuchanan89@yahoo.com", "25.00", "USD");

  // 🔁 LOG TO DASHBOARD
  await logToSupabase(payload);

  // 🔗 INDEX TO VAULT
  await publishToVault(payload.index_url, payload);

  res.status(200).send({ status: "System drop executed", payload });
});

function sendToPayPal(email, amount, currency) {
  console.log(`Routing $${amount} ${currency} to PayPal: ${email}`);
}

function logToSupabase(data) {
  console.log("Logged to dashboard:", data);
}

function publishToVault(url, data) {
  console.log("Published to vault:", url);
}

app.listen(3003, () => console.log('System drop live on port 3003'));form action="https://oraclesignal.site/api/drop-oneclick" method="POST">
