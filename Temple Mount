<body>
  <h1>Affiliate Dashboard</h1>
  <p>Track your referrals. Earn commissions. Feed the flame.</p>

  <form id="affiliateForm">
    <input type="text" name="affiliateId" placeholder="Your affiliate ID" required />
    <input type="text" name="referralCode" placeholder="Referral code used" />
    <input type="number" name="clicks" placeholder="Clicks received" />
    <input type="number" name="conversions" placeholder="Conversions earned" />
    <button type="submit">Submit Tracking</button>
  </form>

  <div id="result"></div>

  <script>
    document.getElementById('affiliateForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const data = {
        affiliateId: form.affiliateId.value,
        referralCode: form.referralCode.value,
        clicks: parseInt(form.clicks.value),
        conversions: parseInt(form.conversions.value)
      };

      try {
        const res = await fetch('https://workspace.charlesbuchana2.repl.co/track-affiliate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        const result = await res.json();
        document.getElementById('result').textContent = result.status === 'success'
          ? '✅ Tracking submitted. Commissions updated.'
          : '❌ Submission failed. Try again or contact support.';
      } catch (err) {
        document.getElementById('result').textContent = '⚠️ Server error. Try again later.';
      }
    });
  </script>
</body>
</html>
