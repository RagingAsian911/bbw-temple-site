# .github/workflows/deploy-dns.yml
name: Deploy DNS Records

on:
  push:
    paths:
      - 'config/dns/dns-config.json'

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repo
        uses: actions/checkout@v3

      - name: Load DNS Config
        run: |
          cat config/dns/dns-config.json

      - name: Deploy DNS Records
        run: |
