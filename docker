version: '3.8'
services:
  storefront:
    image: nginx:alpine
    container_name: bbw-storefront
    ports:
      - "8080:80"
    volumes:
      - ./public:/usr/share/nginx/html
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    restart: always
    environment:
      - VIRTUAL_HOST=bbwtemplesite.org.uk
      - LETSENCRYPT_HOST=bbwtemplesite.org.uk
      - LETSENCRYPT_EMAIL=admin@bbwtemplesite.org.uk

